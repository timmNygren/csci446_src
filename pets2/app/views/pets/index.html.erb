<div id="pet_list">
  <h1>Pet List</h1>

  <table>
  <% @pets.each do |pet| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td>
        <%= image_tag(pet.image_url, class: 'list_image') %>
      </td>
      <td class="list_description">
        <dl>
          <dt><%= pet.name %></dt>
          <dd>Age: <%= pet.age %><br />
                Gender: <%= pet.gender %><br />
                Breed: <%= pet.breed %><br /><br />
                Coloring: <%= strip_tags(pet.coloring) %><br /><br />
                Habit: <%= strip_tags(pet.habits) %>
          </dd>
        </dl>
        </td>

        <td class="list_actions">
          <%= link_to 'Show', pet %><br />
          <%= link_to 'Edit', edit_pet_path(pet) %><br />
          <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 
            'Are you sure?' } %>
        </td>
    </tr>
  <% end %>
  </table>
</div>
<br />

<%= link_to 'New Pet', new_pet_path %>
